<lumen:component extends="ui:block" extensible="true">
    <lumen:attribute name="desc" type="Lumen.Component[]"/>
    <lumen:attribute name="left" type="Lumen.Component[]"/>
    <lumen:attribute name="right" type="Lumen.Component[]"/>
    <h2 class="subject truncate">{!v.body}</h2>
    <lumen:renderif isTrue="{!v.desc != null}">
        <p class="desc truncate">{!v.desc}</p>
    </lumen:renderif>
</lumen:component>
