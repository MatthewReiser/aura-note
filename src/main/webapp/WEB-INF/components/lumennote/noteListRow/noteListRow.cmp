<lumen:component extends="lumennote:listRow">
    <lumen:attribute name="note" type="java://org.lumenframework.demo.notes.Note"/>
    <lumen:set attribute="desc">
		<div class="mask">&nbsp;</div>
		<lumen:unescapedHtml value="{!v.note.body}"/>
    </lumen:set>
    <lumen:set attribute="onclick" value="{!c.openNote}"/>
    <lumen:set attribute="right"><ui:outputDateTime value="{!v.note.createdOnAsCalendar}" format="h:mm a"/></lumen:set>
    {!v.note.title}
</lumen:component>