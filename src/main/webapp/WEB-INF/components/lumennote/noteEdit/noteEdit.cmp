<lumen:component extends="lumennote:note" controller="java://org.lumenframework.demo.notes.controllers.NoteEditController" >
	<lumen:set attribute="class" value="edit"/>
    <lumen:set attribute="buttons">
    	<ui:button label="Cancel" press="{!c.cancel}"/>
    	<ui:button label="Save" press="{!c.save}"/>
	</lumen:set>
	<lumen:set attribute="title">
		<ui:inputText value="{!v.note.title}" lumen:id="title" placeholder="Note Title"/>
	</lumen:set>
	<lumen:set attribute="tags">
	    <lumen:if isTrue="{!v.note.latitude != null}">
			<ui:button press="{!c.setLocation}" class="locationButton" iconClass="icon">
		    	Location set: {!v.note.longitude+', '+v.note.latitude}
			</ui:button>
	    	<a href="{!'http://maps.google.com/?q='+v.note.latitude+','+v.note.longitude}" target="_new">
		    	<img src="{!'http://maps.googleapis.com/maps/api/staticmap?center='+v.note.latitude+','+v.note.longitude+'&amp;zoom=11&amp;size=100x100&amp;sensor=false'}"/>
		    	<img src="{!'http://maps.googleapis.com/maps/api/streetview?size=100x100&amp;location='+v.note.latitude+','+v.note.longitude+'&amp;sensor=false'}"/>
	    	</a>
	    	<lumen:else>
				<ui:button label="Set Location" press="{!c.setLocation}" class="locationButton" iconClass="icon"/>
	    	</lumen:else>
	    </lumen:if>
	</lumen:set>
	<lumen:set attribute="body">
		<ui:inputTextArea value="{!v.note.body}"/>	
	</lumen:set>
</lumen:component>
