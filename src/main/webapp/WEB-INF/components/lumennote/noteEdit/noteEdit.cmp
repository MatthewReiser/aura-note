<lumen:component extends="lumennote:note" controller="java://org.lumenframework.demo.notes.controllers.NoteEditController" >
	<lumen:set attribute="class" value="edit"/>
    <lumen:set attribute="buttons">
    	<ui:button label="Cancel" press="{!c.cancel}"/>
    	<ui:button label="Save" press="{!c.save}"/>
	</lumen:set>
	<lumen:set attribute="title">
		<ui:inputText value="{!v.note.title}" lumen:id="title"/>
		<ui:button label="Set Location" press="{!c.setLocation}"/>
	</lumen:set>
	<lumen:set attribute="body">
		<ui:inputTextArea value="{!v.note.body}"/>	
	</lumen:set>
</lumen:component>
