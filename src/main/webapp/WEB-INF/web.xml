<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">

	<display-name>Lumen</display-name>

	<filter>
		<filter-name>LumenContextFilter</filter-name>
		<filter-class>lumen.http.LumenContextFilter</filter-class>
		<init-param>
			<param-name>componentDir</param-name>
			<param-value>/WEB-INF/components</param-value>
		</init-param>
	</filter>

	<!-- Begin Lumen Servlet -->

	<filter>
		<filter-name>LumenRewriteFilter</filter-name>
		<filter-class>lumen.http.LumenRewriteFilter</filter-class>
	</filter>

	<filter-mapping>
		<url-pattern>*.cmp</url-pattern>
		<filter-name>LumenRewriteFilter</filter-name>
	</filter-mapping>

	<filter-mapping>
		<url-pattern>*.app</url-pattern>
		<filter-name>LumenRewriteFilter</filter-name>
	</filter-mapping>


	<servlet>
		<servlet-name>LumenServlet</servlet-name>
		<servlet-class>lumen.http.LumenServlet</servlet-class>
		<load-on-startup>0</load-on-startup>
	</servlet>

	<filter-mapping>
		<filter-name>LumenContextFilter</filter-name>
		<url-pattern>/lumen</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>INCLUDE</dispatcher>
	</filter-mapping>

	<servlet-mapping>
		<servlet-name>LumenServlet</servlet-name>
		<url-pattern>/lumen</url-pattern>
	</servlet-mapping>


	<!-- Begin Lumen ResourceServlet -->

	<filter>
		<filter-name>LumenResourceRewriteFilter</filter-name>
		<filter-class>lumen.http.LumenResourceRewriteFilter</filter-class>
	</filter>

	<filter-mapping>
		<url-pattern>/l/*</url-pattern>
		<filter-name>LumenResourceRewriteFilter</filter-name>
	</filter-mapping>

	<servlet>
		<servlet-name>LumenResourceServlet</servlet-name>
		<servlet-class>lumen.http.LumenResourceServlet</servlet-class>
		<load-on-startup>0</load-on-startup>
	</servlet>

	<filter-mapping>
		<filter-name>LumenContextFilter</filter-name>
		<url-pattern>/lumenResource</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>INCLUDE</dispatcher>
	</filter-mapping>

	<servlet-mapping>
		<servlet-name>LumenResourceServlet</servlet-name>
		<url-pattern>/lumenResource</url-pattern>
	</servlet-mapping>

	<!-- Begin Lumen Framework Servlet -->
	<servlet>
		<servlet-name>LumenFrameworkServlet</servlet-name>
		<servlet-class>lumen.http.LumenFrameworkServlet</servlet-class>
		<load-on-startup>0</load-on-startup>
	</servlet>
	<filter>
		<filter-name>CompressingFilter</filter-name>
		<filter-class>com.planetj.servlet.filter.compression.CompressingFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>CompressingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<servlet-mapping>
		<servlet-name>LumenFrameworkServlet</servlet-name>
		<url-pattern>/lumenFW/*</url-pattern>
	</servlet-mapping>

</web-app>


